<extension type="component" version="3.0" method="upgrade">
    <name>com_jpframework</name>
    <creationDate>2015-01-24</creationDate>
    <copyright>Copyright (C) 2015. Todos los derechos reservados.</copyright>
    <license>Licencia Pública General GNU versión 2 o posterior. Consulte LICENSE.txt</license>
    <author>aficat</author>
    <authorEmail>kim@aficat.com</authorEmail>
    <authorUrl>http://www.afi.cat</authorUrl>
    <version>1.0.0</version>
    <description>JPFramework component</description>
      
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <administration>
        <menu img="components/com_jpframework/assets/images/s_com_jpframework.png" >COM_JPFRAMEWORK</menu>
        <submenu>
            
		<menu link="option=com_jpframework&amp;view=blocks" view="blocks" img="components/com_jpframework/assets/images/s_blockss.png" alt="Jpframework/Blocks">COM_JPFRAMEWORK_TITLE_BLOCKS</menu>
		<!--
		<menu link="option=com_jpframework&amp;view=store" view="store" img="components/com_jpframework/assets/images/s_blocks.png" alt="Jpframework/Store">COM_JPFRAMEWORK_TITLE_STORE</menu>
		-->
        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>jpframework.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>blocks</folder>
        </files>
        <files folder="site">
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>jpframework.php</filename>
        </files>
        <languages folder="languages/administrator">            
			<language tag="en-GB">en-GB/en-GB.com_jpframework.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_jpframework.sys.ini</language>
        </languages>
    </administration>  
</extension>

