<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset label="COM_JPFRAMEWORK_GENERAL" name="general">
    	<field 
    		name="offline_date" 
    		type="calendar" 
    		default="" 
    		label="Select a date" 
    		description="" 
    		format="%Y-%m-%d"    	
    	/>
    	<field 
    		name="menu" 
    		type="filelist" 
    		default="menu-1" 
    		label="COM_JPFRAMEWORK_TOPMENU_LABEL" 
    		description="COM_JPFRAMEWORK_TOPMENU_DESC" 
    		directory="templates/jpframework/layouts/menu"  
    		filter="\.php" 
    		exclude="\.html|\.css" 
    		stripext="true" 
    		hide_default="true" 
    	/>
    	<field 
    		name="topmenu-logo" 
    		class="inputbox" 
    		type="media" 
    		label="COM_JPFRAMEWORK_LOGO_LABEL" 
    		description="COM_JPFRAMEWORK_LOGO_DESC" 
    		directory="images/" 
    	/> 	
        <field 
        	name="layout" 
        	type="filelist" 
        	default="clear" 
        	label="COM_JPFRAMEWORK_LAYOUT_LABEL" 
        	description="COM_JPFRAMEWORK_LAYOUT_DESC" 
        	directory="templates/jpframework/layouts" 
        	filter="" 
        	exclude="index.html" 
        	stripext="true" 
        	hide_default="true" 
        />
        <field 
        	name="jpf-top" 
        	type="radio" 
        	default="1" 
        	label="COM_JPFRAMEWORK_TOP_LABEL" 
        	description="COM_JPFRAMEWORK_TOP_DESC" 
        	class="btn-group"
        />
        <field 
        	name="jpf-main" 
        	type="radio" 
        	default="0" 
        	label="COM_JPFRAMEWORK_MAIN_LABEL"  
        	description="COM_JPFRAMEWORK_MAIN_DESC" 
        	class="btn-group"
        />
        <field 
        	name="jpf-showcase" 
        	type="radio" 
        	default="0" 
        	label="COM_JPFRAMEWORK_SHOWCASE_LABEL"  
        	description="COM_JPFRAMEWORK_SHOWCASE_DESC" 
        	class="btn-group"
        />
        <field 
        	name="jpf-bottom" 
        	type="radio" 
        	default="0"  
        	label="COM_JPFRAMEWORK_BOTTOM_LABEL"  
        	description="COM_JPFRAMEWORK_BOTTOM_DESC" 
        	class="btn-group"
        />
        <field 
        	name="jpf-footer" 
        	type="radio" 
        	default="1" 
        	label="COM_JPFRAMEWORK_FOOTER_LABEL"  
        	description="COM_JPFRAMEWORK_FOOTER_DESC" 
        	class="btn-group"
        />
        <field 
        	name="privacy" 
        	type="article" 
        	default="" 
        	label="COM_JPFRAMEWORK_PRIVACY_LABEL" 
        	description="COM_JPFRAMEWORK_PRIVACY_DESC" 
        />
		<field 
			name="terms" 
			type="article" 
			default="" 
			label="COM_JPFRAMEWORK_TERMS_LABEL" 
			description="COM_JPFRAMEWORK_TERMS_DESC" 
		/>
		<field 
			type="radio" 
			name="fluid" 
			default="0" 
			class="btn-group" 
			label="COM_JPFRAMEWORK_FLUID_LABEL" 
			description="COM_JPFRAMEWORK_FLUID_DESC"
		>
            <option value="0">JNO</option>
            <option value="1">JYES</option>
         </field>
         <field 
         	type="radio" 
         	name="cookies" 
         	default="0" 
         	class="btn-group" 
         	label="COM_JPFRAMEWORK_COOKIES_LABEL" 
         	description="COM_JPFRAMEWORK_COOKIES_DESC"
         >
         	<option value="0">JNO</option>
            <option value="1">JYES</option>
         </field>
         <field 
          	name="cookies_link" 
          	type="text" 
          	class="inputbox" 
          	default="" 
          	label="JP_FRAMEWORK_COOKIES_LINK_LABEL" 
          	description="JP_FRAMEWORK_COOKIES_LINK_DESC" 
          />
         <field 
          	name="ganalytics" 
          	type="text" 
          	class="inputbox" 
          	default="" 
          	label="JP_FRAMEWORK_ANALYTICS_LABEL" 
          	description="JP_FRAMEWORK_ANALYTICS_DESC" 
          />
          <field 
          	name="addthis" 
          	type="text" 
          	class="inputbox" 
          	default="" 
          	label="JP_FRAMEWORK_ADDTHIS_LABEL" 
          	description="JP_FRAMEWORK_ADDTHIS_DESC" 
          />
          <field 
          	name="register" 
          	type="text" 
          	class="inputbox" 
          	default="" 
          	label="JP_FRAMEWORK_REGISTER_LABEL" 
          	description="JP_FRAMEWORK_REGISTER_DESC" 
          />
    </fieldset>
    <fieldset label="COM_JPFRAMEWORK_STYLES" name="styles">
    	<field type="list" name="body_font" size="15" default="Noto Sans" label="COM_JPFRAMEWORK_BODYFONT_LABEL" description="COM_JPFRAMEWORK_BODYFONT_DESC">
        	<option value="Cantarell">Cantarell</option>
            <option value="Cookie">Cookie</option>
            <option value="Droid Sans">Droid Sans</option>
            <option value="Droid Sans Mono">Droid Sans Mono</option>
            <option value="Droid Serif">Droid Serif</option>
            <option value="Exo">Exo</option>
            <option value="Lato">Lato</option>
            <option value="Lobster">Lobster</option>
            <option value="Lobster Two">Lobster Two</option>
            <option value="Merriweather">Merriweather</option>
            <option value="Merriweather Sans">Merriweather Sans</option>
            <option value="Open Sans">Open Sans</option>
            <option value="Open Sans Condensed:300">Open Sans Condensed</option>
            <option value="Oswald">Oswald</option>
            <option value="PT Mono">PT Mono</option>
            <option value="PT Sans">PT Sans</option>
            <option value="Raleway">Raleway</option>
            <option value="Roboto">Roboto</option>
            <option value="Roboto Condensed">Roboto Condensed</option>
            <option value="Roboto Slab">Roboto Slab</option>
            <option value="Rochester">Rochester</option>
            <option value="Ubuntu">Ubuntu</option>
            <option value="Ubuntu Condensed">Ubuntu Condensed</option>
            <option value="Ubuntu Mono">Ubuntu Mono</option>
            <option value="Vollkorn">Vollkorn</option>
        </field>
    	<field 
			name="body_color" 
			type="color" 
			default="#ffffff" 
			label="Body background" 
			description="Body background color" 
		/>
		<field 
			name="body_fcolor" 
			type="color" 
			default="#34495e" 
			label="Body font color" 
			description="Body font color" 
		/>
		<field 
			name="menu_bg" 
			type="color" 
			default="#000" 
			label="Menu background" 
			description="Menu background color" 
		/>
        <field 
			name="link_color" 
			type="color" 
			default="#1abc9c" 
			label="Link color" 
			description="Link color" 
		/>
		<field 
			name="linkhover_color" 
			type="color" 
			default="#1abc9c" 
			label="Link hover color" 
			description="Link hover color" 
		/>
		<field 
			name="footer_color" 
			type="color" 
			default="#1abc9c" 
			label="Footer background" 
			description="Footer background color" 
		/>
		<field 
			name="footer_fcolor" 
			type="color" 
			default="#ffffff" 
			label="Footer font color" 
			description="Footer font color" 
		/>
		<field 
          		name="unicode" 
          		type="text" 
          		class="inputbox" 
          		default="f005" 
          		label="JP_FRAMEWORK_UNICODE_LABEL" 
          		description="JP_FRAMEWORK_UNICODE_DESC" 
          	/>
    </fieldset>
    <fieldset label="COM_JPFRAMEWORK_SOCIAL" name="social">
    	<field 
			name="facebook" 
			type="text" 
			default="" 
			label="Facebook link" 
			description="Facebook link" 
		/>
		<field 
			name="flickr" 
			type="text" 
			default="" 
			label="Flickr link" 
			description="Flickr link" 
		/>
		<field 
			name="foursquare" 
			type="text" 
			default="" 
			label="Foursquare link" 
			description="Foursquare link" 
		/>
		<field 
			name="github" 
			type="text" 
			default="" 
			label="Github link" 
			description="Github link" 
		/>
		<field 
			name="gplus" 
			type="text" 
			default="" 
			label="Google plus link" 
			description="Google plus link" 
		/>
		<field 
			name="instagram" 
			type="text" 
			default="" 
			label="Instagram link" 
			description="Instagram link" 
		/>
		<field 
			name="linkedin" 
			type="text" 
			default="" 
			label="Linkedin link" 
			description="Linkedin link" 
		/>
		<field 
			name="pinterest" 
			type="text" 
			default="" 
			label="Pinterest link" 
			description="Pinterest link" 
		/>
		<field 
			name="twitter" 
			type="text" 
			default="" 
			label="Twitter link" 
			description="Twitter link" 
		/>
		<field 
			name="youtube" 
			type="text" 
			default="" 
			label="Youtube link" 
			description="Youtube link" 
		/>
    </fieldset>
    <fieldset 
        name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>
		<field 
              name="rules" type="rules" component="com_jpframework"
              class="inputbox" filter="rules" validate="rules"
               label="JCONFIG_PERMISSIONS_LABEL"
                section="component" />
	</fieldset>
</config>
