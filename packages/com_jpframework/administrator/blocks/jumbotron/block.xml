<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="block">
		<field 
			name="title" 
			type="text" 
			default="" 
			label="Title" 
			description="A title for this block, only appears on listing not in the frontend." 
		/>
		<field 
			name="block_color" 
			type="color" 
			default="#ffffff" 
			label="Background" 
			description="Block background color." 
		/>
		<field 
			name="block_font_color" 
			type="color" 
			default="#ffffff" 
			label="Font color" 
			description="Font color" 
		/>
		<field 
			name="block_font_size" 
			type="list" 
			default="fs-4" 
			label="Font size" 
			description="Uniqid is used as the block section id, useful for anchors or specific css styles." 
		>
		<option value="">SELECT_AN_OPTION</option>
		<option value="fs-1">1</option>
		<option value="fs-2">2</option>
		<option value="fs-3">3</option>
		<option value="fs-4">4</option>
		<option value="fs-5">5</option>
		<option value="fs-6">6</option>
		</field>
		<field 
			name="uniqid" 
			type="text" 
			default="" 
			label="Uniqid" 
			description="Uniqid is used as the block section id, useful for anchors or specific css styles." 
		/>
		<field 
			name="classes" 
			type="text" 
			default="" 
			label="Classes" 
			description="Additional classes to this section block." 
		/>
		<field
			name="scroll_effect"
			type="scrolleffects"
			default=""
			label="Scroll effect"
			description="Ver demo en https://daneden.github.io/animate.css/"
		/>
		<field 
			name="jumbotron-title" 
			type="text" 
			default="" 
			label="Heading text" 
			description="Block heading text" 
		/>
		<field 
			name="jumbotron-text" 
			type="textarea" 
			description="Block subheading text" 
			label="Subheading text" 
			cols="10"
			rows="5"
		/>
		<field 
			name="jumbotron-btn1-text" 
			type="text" 
			default="" 
			label="Button text" 
			description="Button text" 
		/>
		<field 
			name="jumbotron-btn1-link" 
			type="text" 
			default="" 
			label="Button link" 
			description="Button link" 
		/>
		<field 
			name="jumbotron-btn1-class" 
			type="classes" 
			default="dark" 
			label="Button class" 
			description="Button class" 
		/>
		<field 
			name="jumbotron-img" 
			type="media" 
			default="" 
			label="Image" 
			description="Background image, if empty background color is used instead." 
		/>
		<field 
			name="jumbotron-height" 
			type="text" 
			default="100vh" 
			label="Height" 
			description="Jumbotron height" 
		/>
		<field 
			name="jumbotron-anchor" 
			type="text" 
			default="" 
			label="Anchor" 
			description="Anchor link to scroll down" 
		/>
	</fieldset>
	<fieldset name="styles">
		<field 
			name="css" 
			type="textarea" 
			default="" 
			label="Css" 
			description="Custom css styles for this block, needs a compilation after save changes." 
			rows="20" 
			cols="50" 
			filter="raw"
		/>
	</fieldset>
</form>
