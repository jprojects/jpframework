<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="block">
	<field 
			name="title" 
			type="text" 
			default="" 
			label="Title" 
			description="Block title" 
		/>
		<field 
			name="block_color" 
			type="color" 
			default="#ffffff" 
			label="Background" 
			description="Background color" 
		/>
		<field 
			name="block_font_color" 
			type="color" 
			default="#ffffff" 
			label="Font color" 
			description="Font color" 
		/>	
		<field 
			name="uniqid" 
			type="text" 
			default="" 
			label="Uniqid" 
			description="Uniqid is used as the block section id" 
		/>
		<field 
			name="carousel_id" 
			type="text" 
			default="" 
			label="Carousel id" 
			description="Carousel allow two or more instances in the same page" 
		/>
		<field 
			name="carousel_height" 
			type="text" 
			default="300" 
			label="Carousel height" 
			description="Carousel height in pixels" 
		/>
		<field 
			name="carousel_play" 
			type="text" 
			default="0" 
			label="Carousel autoplay" 
			description="Carousel autoplay control 0 to deactivate or miliseconds to activate" 
		/>
		<field 
			name="list_images"
			type="repeatable"
			icon="list"
			description="Carousel items"
			label="Carousel items"
			default='{"carousel_title":[""],
				"carousel_text":[""],
				"carousel_img":[""]}'>
			<fieldset hidden="true" name="list_images_modal" repeat="true">
				<field 
					name="carousel_title" 
					type="text" 
					default="" 
					label="Title" 
					description="Carousel title" 
				/>
				<field 
					name="carousel_text" 
					type="textarea" 
					default="" 
					label="Text" 
					description="Carousel text" 
					rows="10" 
					cols="5" 
					filter="raw"
				/>
				<field 
					name="carousel_img" 
					type="media" 
					directory="" 
					label="Image" 
				/>
			</fieldset>
		</field>
		<field 
        	name="carousel_btn" 
        	type="text" 
        	default="" 
        	label="Button title" 
        	description="Button title" 
        />
        <field 
        	name="carousel_btn_link" 
        	type="text" 
        	default="#" 
        	label="Button Link" 
        	description="Button link" 
        />
	</fieldset>
	<fieldset name="styles">
		<field 
			name="css" 
			type="textarea" 
			default="" 
			label="Css" 
			description="Custom css styles" 
			rows="20" 
			cols="50" 
			filter="raw"
		/>
	</fieldset>
</form>
