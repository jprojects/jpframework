			name="carousel_text1" 
			type="textarea" 
			default="" 
			label="Text 1" 
			description="Carousel text 1" 
			rows="10" 
			cols="5" 
			filter="raw"
		/>
		<field 
			name="carousel_img1" 
			type="media" 
			directory="" 
			label="Image 1" 
		/>
