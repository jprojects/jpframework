<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="block">
		<field 
			name="title" 
			type="text" 
			default="" 
			label="Title" 
			description="Block title" 
		/>
		<field 
			name="block_color" 
			type="color" 
			default="#ffffff" 
			label="Background" 
			description="Block background color" 
		/>
		<field 
			name="block_font_color" 
			type="color" 
			default="#ffffff" 
			label="Font color" 
			description="Font color" 
		/>
		<field 
			name="uniqid" 
			type="text" 
			default="" 
			label="Uniqid" 
			description="Uniqid is used as the block section id" 
		/>
		<field 
			name="classes" 
			type="text" 
			default="" 
			label="Classes" 
			description="Additional classes to this section block." 
		/>
		<field 
			name="counter_heading" 
			type="text" 
			default="" 
			label="Heading" 
			description="Heading title" 
		/>
		<field 
			name="counter_subheading" 
			type="text" 
			default="" 
			label="Subheading" 
			description="Text under heading" 
		/>
		<field
			name="list_counter"
			type="subform"
			label="Counters"
			description="Counter items"
			multiple="true"
			min="1"
			max="6"
			>
			<form>
				<field 
					name="counter_icon" 
					type="text" 
					label="Icon" 
					description="font awesome v.4" 
				/>
				<field 
					name="counter_title" 
					type="text" 
					default="" 
					label="Title" 
					description="" 
				/>
				<field 
					name="counter_velocity" 
					type="text" 
					default="" 
					label="Velocity" 
					description="Velocitat en ms" 
				/>
				<field 
					name="counter_end" 
					type="text" 
					default="" 
					label="End" 
					description="Limit del contador" 
				/>
			</form>
		</field>
	</fieldset>
	<fieldset name="styles">
		<field 
			name="css" 
			type="textarea" 
			default="" 
			label="Css" 
			description="Custom css styles" 
			rows="20" 
			cols="50" 
			filter="raw"
		/>
	</fieldset>
</form>
