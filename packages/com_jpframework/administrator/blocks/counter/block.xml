				<field 
					name="counter_icon" 
					type="text" 
					label="Icon" 
					description="font awesome v.4 nomes fa-icon" 
				/>
				<field 
					name="counter_title" 
					type="text" 
					default="" 
					label="Title" 
					description="" 
				/>
				<field 
					name="counter_velocity" 
					type="text" 
					default="" 
					label="Velocity" 
					description="Velocitat en ms" 
				/>
				<field 
					name="counter_end" 
					type="text" 
					default="" 
					label="End" 
					description="Limit del contador" 
				/>
			</fieldset>
		</field>
	</fieldset>
	<fieldset name="styles">
		<field 
			type="spacer" 
			name="spacer1" 
			class="text"
			label="COM_JPFRAMEWORK_SYLES_FIELD"
		/>
		<field 
			name="css" 
			type="textarea" 
			default="" 
			label="Css" 
			description="Custom css styles" 
			rows="20" 
			cols="50" 
			filter="raw"
		/>
	</fieldset>
