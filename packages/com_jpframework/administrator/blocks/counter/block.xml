<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="block">
		<field 
			name="title" 
			type="text" 
			default="" 
			label="Title" 
			description="Block title" 
		/>
		<field 
			name="block_color" 
			type="color" 
			default="#ffffff" 
			label="Background" 
			description="Background color" 
		/>
		<field 
			name="block_font_color" 
			type="color" 
			default="#ffffff" 
			label="Font color" 
			description="Font color" 
		/>
		<field 
			name="uniqid" 
			type="text" 
			default="" 
			label="Uniqid" 
			description="Uniqid is used as the block section id" 
		/>
		<field 
			name="counter_heading" 
			type="text" 
			default="" 
			label="Heading" 
			description="Heading title" 
		/>
		<field 
			name="counter_subheading" 
			type="text" 
			default="" 
			label="Subheading" 
			description="Text under heading" 
		/>
		<field 
			name="list_counter"
			type="repeatable"
			icon="list"
			description="Counter items"
			label="Counters"
			default='{
				"counter_icon":[""],
				"counter_title":[""],
				"counter_velocity":[""],
				"counter_end":[""]}'>
