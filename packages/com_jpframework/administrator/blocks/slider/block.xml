<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="block">
		<field
			name="title"
			type="text"
			default=""
			label="Title"
			description="Block title"
		/>
		<field
			name="block_color"
			type="color"
			default="#ffffff"
			label="Background"
			description="Background color"
		/>
		<field
			name="block_font_color"
			type="color"
			default="#ffffff"
			label="Font color"
			description="Font color"
		/>
		<field
			name="fluid"
			type="list"
			default=""
			label="Fluid"
			description="Section fluid or not"
		>
			<option value="">Full width</option>
			<option value="container">Not fluid</option>
			<option value="container-fluid">Fluid</option>
		</field>
		<field
			name="classes"
			type="text"
			default=""
			label="Classes"
			description="Classes used in this block"
		/>
		<field
			name="uniqid"
			type="text"
			default=""
			label="Uniqid"
			description="Uniqid is used as the block section id"
		/>
		<field
			name="slider_id"
			type="text"
			default=""
			label="Uniqid"
			description="Uniqid is used as the slider"
		/>
		<field
			name="content_title"
			type="text"
			default=""
			label="Title"
			description="Content block title"
		/>
		<field
			name="color_title"
			type="color"
			default="#000"
			label="Title color"
			description="Title color"
		/>
		<field
			name="heading_size"
			type="list"
			default="h1"
			label="Title position"
			description="Title position"
		>
			<option value="h1">H1</option>
			<option value="h2">H2</option>
			<option value="h3">H3</option>
			<option value="h4">H4</option>
			<option value="h5">H5</option>
			<option value="h6">H6</option>
		</field>
		<field
			name="divider"
			type="list"
			default="1"
			label="Title divider"
			description="Title divider"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="content_text"
			label="Text"
			type="editor"
			width="300"
			filter="safehtml"
			buttons="true"
		/>
		<field
			name="scroll_effect_text"
			type="scrolleffects"
			default=""
			label="Scroll effect Text"
			description="Ver demo en https://daneden.github.io/animate.css/"
		/>
		<field
			name="scroll_effect_img"
			type="scrolleffects"
			default=""
			label="Scroll effect Image"
			description="Ver demo en https://daneden.github.io/animate.css/"
		/>
		<field
			name="content_img_alt"
			type="text"
			default=""
			label="Image Alt"
			description="Image Alt"
		/>
		<field
			name="slider_controlImg_left"
			type="media"
			directory=""
			label="Fletxa esquerra"
			description="Slider icones"
		/>
		<field
			name="slider_controlImg_right"
			type="media"
			directory=""
			label="Fletxa dreta"
			description="Slider" />
		<field
			name="list_images"
			type="subform"
			icon="list"
			description="Slider images"
			label="Slider images"
			multiple="true"
			min="1"
			max="10">
			<form>
				<field
					name="slider_img"
					type="media"
					directory=""
					label="Image"
					description=""
				/>
			</form>
		</field>
	</fieldset>
	<fieldset name="styles">
		<field
			type="spacer"
			name="spacer1"
			class="text"
			label="COM_JPFRAMEWORK_SYLES_FIELD"
		/>
		<field
			name="css"
			type="textarea"
			default=""
			label="Css"
			description="Custom css styles"
			rows="20"
			cols="50"
			filter="raw"
		/>
	</fieldset>
</form>
