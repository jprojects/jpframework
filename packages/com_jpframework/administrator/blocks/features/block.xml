<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="block">
	<field 
			name="title" 
			type="text" 
			default="" 
			label="Title" 
			description="Block title" 
		/>
		<field 
			name="block_color" 
			type="color" 
			default="#ffffff" 
			label="Background" 
			description="Background color" 
		/>
		<field 
			name="block_font_color" 
			type="color" 
			default="#ffffff" 
			label="Font color" 
			description="Font color" 
		/>	
		<field 
			name="uniqid" 
			type="text" 
			default="" 
			label="Uniqid" 
			description="Uniqid is used as the block section id" 
		/>
		<field 
			name="feature_heading" 
			type="text" 
			default="" 
			label="Heading" 
			description="Feature heading" 
		/>
		<field 
			name="feature_subheading" 
			type="text" 
			default="" 
			label="Sub Heading" 
			description="Feature subheading" 
		/>
		<field 
			name="height" 
			type="text" 
			default="140" 
			label="Image Width and Height" 
			description="" 
		/>
		<field 
			name="feature_column" 
			type="list" 
			default="4" 
			label="Columns" 
			description="" 
		>
			<option value="12">1</option>
			<option value="6">2</option>
			<option value="4">3</option>
			<option value="3">4</option>
		</field>
		<field 
			name="list_features"
			type="subform"
			icon="list"
			description="Features items"
			label="Features items"
			multiple="true"
			min="1"
			max="10">
			<form>
				<field 
					name="feat_title" 
					type="text" 
					default="" 
					label="Title" 
					description="Feature title" 
				/>
				<field 
					name="feat_text" 
					type="text" 
					default="" 
					label="Text" 
					description="Feature text" 
				/>
				<field 
					name="feat_img" 
					type="media" 
					directory="" 
					label="Image" 
					description="Feature image"
				/>
				<field 
					name="feat_btn_text" 
					type="text" 
					default="" 
					label="Button text" 
					description="Feature button text" 
				/>				
				<field 
					name="feat_btn_link" 
					type="text" 
					default="" 
					label="Button Link" 
					description="Feature button link" 
				/>
				<field 
					name="feat-btn-class" 
					type="classes" 
					default="dark" 
					label="Button class" 
					description="Feature button class" 
				/>
			</form>
		</field>
	</fieldset>
	<fieldset name="styles">
		<field 
			type="spacer" 
			name="spacer1" 
			class="text"
			label="COM_JPFRAMEWORK_SYLES_FIELD"
		/>
		<field 
			name="css" 
			type="textarea" 
			default="" 
			label="Css" 
			description="Custom css styles" 
			rows="20" 
			cols="50" 
			filter="raw"
		/>
	</fieldset>
</form>
