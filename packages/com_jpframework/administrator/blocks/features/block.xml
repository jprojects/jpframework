<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="block">
		<field 
			name="title" 
			type="text" 
			default="" 
			label="Title" 
			description="Block title" 
		/>
		<field 
			name="block_color" 
			type="color" 
			default="#ffffff" 
			label="Background" 
			description="Background color" 
		/>
		<field 
			name="block_font_color" 
			type="color" 
			default="#ffffff" 
			label="Font color" 
			description="Font color" 
		/>
		<field 
			name="uniqid" 
			type="text" 
			default="" 
			label="Uniqid" 
			description="Uniqid is used as the block section id" 
		/>
		<field 
			name="feature_heading" 
			type="text" 
			default="" 
			label="Title" 
			description="Heading title" 
		/>
		<field 
			name="feature_subheading" 
			type="textarea" 
			default="" 
			label="Subtitle" 
			description="Subheading text" 
			rows="10" 
			cols="5" 
			filter="raw"
		/>
		<field 
			name="content_position" 
			type="list" 
			default="center" 
			label="Content position" 
			description="Content position" 
		>
			<option value="text-center">Center</option>
			<option value="text-right">Right</option>
			<option value="text-left">Left</option>
		</field>
		<field 
			name="list_features"
			type="repeatable"
			icon="list"
			description="Features items"
			label="Features items"
			default='{"feature_title":[""],
				"feature_text":[""],
				"feature_img":[""],
				"feature_btn":[""],
				"feature_btn_link":[""]}'>
			<fieldset hidden="true" name="list_features_modal" repeat="true">
				<field 
					name="feature_title" 
					type="text" 
					default="" 
					label="Button" 
					description="Button title" 
				/>
				<field 
					name="feature_text" 
					type="textarea" 
					default="" 
					label="Text" 
					description="Feature text" 
					rows="10" 
					cols="5" 
					filter="raw"
				/>
				<field 
					name="feature_img" 
					type="media" 
					directory="" 
					label="Image" 
				/>
				<field 
					name="feature_btn" 
					type="text" 
					default="" 
					label="Button" 
					description="Button title" 
				/>
				<field 
					name="feature_btn_link" 
					type="text" 
					default="#" 
					label="Button Link" 
					description="Button link" 
				/>
			</fieldset>
		</field>
	</fieldset>
	<fieldset name="styles">
		<field 
			name="css" 
			type="textarea" 
			default="" 
			label="Css" 
			description="Custom css styles" 
			rows="20" 
			cols="50" 
			filter="raw"
		/>
	</fieldset>
</form>
