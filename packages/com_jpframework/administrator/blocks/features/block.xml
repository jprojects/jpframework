<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="block">
	<field 
			name="title" 
			type="text" 
			default="" 
			label="Title" 
			description="Block title" 
		/>
		<field 
			name="block_color" 
			type="color" 
			default="#ffffff" 
			label="Background" 
			description="Background color" 
		/>
		<field 
			name="block_font_color" 
			type="color" 
			default="#ffffff" 
			label="Font color" 
			description="Font color" 
		/>	
		<field 
			name="uniqid" 
			type="text" 
			default="" 
			label="Uniqid" 
			description="Uniqid is used as the block section id" 
		/>
		<field 
			name="feature_heading" 
			type="text" 
			default="" 
			label="Heading" 
			description="Feature heading" 
		/>
		<field 
			name="feature_subheading" 
			type="text" 
			default="" 
			label="Sub Heading" 
			description="Feature subheading" 
		/>
		<field 
			name="height" 
			type="text" 
			default="140" 
			label="Image Width and Height" 
			description="" 
		/>
		<field 
			name="list_features"
			type="repeatable"
			icon="list"
			description="Features items"
			label="Features items"
			default='{"feat_title":[""],
				"feat_text":[""],
				"feat_img":[""],
				"feat_btn_text":[""],
				"feat_btn_link":[""]}'>
			<fieldset hidden="true" name="list_images_modal" repeat="true">
				<field 
					name="feat_title" 
					type="text" 
					default="" 
					label="Title" 
					description="Feature title" 
				/>
				<field 
					name="feat_text" 
					type="text" 
					default="" 
					label="Text" 
					description="Feature text" 
				/>
				<field 
					name="feat_img" 
					type="media" 
					directory="" 
					label="Image" 
					description="Feature image"
				/>
				<field 
					name="feat_btn_text" 
					type="text" 
					default="" 
					label="Button text" 
					description="Feature button text" 
				/>
				<field 
					name="feat_btn_link" 
					type="text" 
					default="" 
					label="Button Link" 
					description="Feature button link" 
				/>
			</fieldset>
		</field>
	</fieldset>
	<fieldset name="styles">
		<field 
			name="css" 
			type="textarea" 
			default="" 
			label="Css" 
			description="Custom css styles" 
			rows="20" 
			cols="50" 
			filter="raw"
		/>
	</fieldset>
</form>
