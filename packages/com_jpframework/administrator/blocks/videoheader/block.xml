<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="block">
		<field 
			name="title" 
			type="text" 
			default="" 
			label="Title" 
			description="Block title" 
		/>
		<field 
			name="block_color" 
			type="color" 
			default="#ffffff" 
			label="Background" 
			description="Background color" 
		/>
		<field 
			name="uniqid" 
			type="text" 
			default="" 
			label="Uniqid" 
			description="Uniqid is used as the block section id" 
		/>
		<field 
			name="video_header" 
			type="text" 
			default="" 
			label="Video Header" 
			description="" 
		/>
		<field 
			name="video_subheader" 
			type="text" 
			default="" 
			label="Video Subheader" 
			description="" 
		/>
		<field
			name="video_vid"
			type="text"
			label="Video"
			description=""
		/>
		<field
			name="video_autoplay"
			type="radio"
			default="1"
			label="Video Autoplay"
			description=""
			class="btn-group btn-group-yesno"
		>
		<option value="0">JNO</option>
		<option value="1">JYES</option>
		</field>
		<field
			name="video_muted"
			type="radio"
			default="1"
			label="Video Muted"
			description=""
			class="btn-group btn-group-yesno"
		>
		<option value="0">JNO</option>
		<option value="1">JYES</option>
		</field>
		<field
			name="video_loop"
			type="radio"
			default="1"
			label="Video Loop"
			description=""
			class="btn-group btn-group-yesno"
		>
		<option value="0">JNO</option>
		<option value="1">JYES</option>
		</field>
	</fieldset>
	<fieldset name="styles">
		<field 
			type="spacer" 
			name="spacer1" 
			class="text"
			label="COM_JPFRAMEWORK_SYLES_FIELD"
		/>
		<field 
			name="css" 
			type="textarea" 
			default="" 
			label="Css" 
			description="Custom css styles" 
			rows="20" 
			cols="50" 
			filter="raw"
		/>
	</fieldset>
</form>
